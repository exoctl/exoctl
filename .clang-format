# This is a .clang-format configuration file for a style similar to C#

# Define the base style to use
BasedOnStyle: Microsoft

# Define the size of the indentation
IndentWidth: 4

# Define the number of spaces per indentation level
TabWidth: 4

# Use spaces instead of tabs
UseTab: Never

# Define the maximum line length
ColumnLimit: 80

# Define how line breaks should be handled
BreakBeforeBraces: Linux

# Define the alignment of braces for classes, structs, namespaces, and code blocks
BraceWrapping:
  AfterClass: true
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true

# Define the packing of parameters and arguments
BinPackParameters: false
BinPackArguments: false

# Define spacing for operators and parentheses
SpacesInParentheses: false
SpacesInAngles: false
SpaceAfterCStyleCast: true
SpaceBeforeParens: ControlStatements

# Define the style for single-line comments
CommentPragmas: '^//'

# Control the formatting style for variable declarations
AlignAfterOpenBracket: Align
AlignOperands: true

# Style for enums
AllowShortEnumsOnASingleLine: false

# Style for header files
IncludeCategories:
  - Regex:           ''
    Priority:        1
  - Regex:           '.*'
    Priority:        2
IncludeIsMainRegex: '(\b|_)main(\b|_)'

# Maximum number of empty lines to keep
MaxEmptyLinesToKeep: 1

# Define alignment within namespaces and classes
NamespaceIndentation: All

# Adjust indentation for code blocks
IndentCaseLabels: true